@model IEnumerable<Testos.Models.ApplicationUser>

<br />
<br />
@using (Html.BeginForm("SearchUsers", "Home", FormMethod.Get))
{
    @Html.TextBox("SearchString")<input type="submit" value="Search" />
}
<table class="table table-striped">

    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:palevioletred">
                    No Match to ugly
                </td>
            </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td> @item.FirstName</td>
                        <td> @item.EfterNamn</td>
                        <td> @item.Age</td>
                    </tr>
                }
            }
        
    </tbody>
</table>